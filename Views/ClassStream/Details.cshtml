@model WebApplication1.Models.ClassStream

@{
    ViewBag.Title = "Class Stream Details";
}

<h2>Class Stream Details</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Details for @Model.StreamName</h3>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.StreamName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.StreamName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Class.Name, "Class", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Class.Name)
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-default" })
    </div>
</div>
