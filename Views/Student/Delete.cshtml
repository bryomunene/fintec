@model WebApplication1.Models.Student

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Student</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this student?</h4>
    <p>
        <strong>Name:</strong> @Model.FirstName @Model.LastName<br />
        <strong>Class Stream:</strong> @Model.ClassStream.StreamName
    </p>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.StudentId)
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index", "Student")" class="btn btn-default">Cancel</a>
}
